# RoadWeave Production Environment Configuration
# Copy this to backend/.env and update with your actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Security Keys (CHANGE THESE!)
SECRET_KEY=your-super-secret-production-key-change-me
JWT_SECRET_KEY=your-jwt-secret-production-key-change-me

# Google Gemini AI Configuration (REQUIRED)
GEMINI_API_KEY=your-actual-gemini-api-key-here

# AI Photo Analysis (Optional)
ENABLE_PHOTO_ANALYSIS=true
MAX_IMAGE_SIZE=1024
PHOTO_ANALYSIS_LOG_COSTS=false
DAILY_PHOTO_ANALYSIS_LIMIT=200

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///roadweave.db

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=20971520

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-change-me

# Production Optimizations
# Uncomment for better performance
# SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": true, "pool_recycle": 300}